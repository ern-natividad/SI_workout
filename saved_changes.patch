+       FROM plan_workouts pw
+       JOIN workouts w ON pw.workout_id = w.id
+       WHERE pw.plan_id = ?
+       ORDER BY pw.day_of_week`,
+      [planId]
+    );
+
+    res.json({
+      success: true,
+      exercises: exercises
+    });
