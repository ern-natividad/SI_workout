# Server environment example - copy to .env and fill values (DO NOT COMMIT .env)
PORT=5000
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_db_password_here
DB_NAME=workout_app
NODE_ENV=production

# JWT secret for signing tokens - generate a long random string
JWT_SECRET=replace_with_a_strong_random_value

# RapidAPI key (if you use the exercise proxy) - DO NOT PUT A REAL KEY HERE
# Replace the placeholder in your local `server/.env` instead.
RAPIDAPI_KEY=your_rapidapi_key_here

# Max JSON/form size accepted by server (e.g. '2mb' or '5mb')
MAX_JSON_SIZE=5mb
# Max upload file size in bytes (overrides env if set)
MAX_UPLOAD_BYTES=1572864

EXERCISE_CACHE_TTL_SECONDS=86400

# Rate limiting (window in milliseconds, max requests per window)
# Example: RATE_LIMIT_WINDOW_MS=900000 (15 minutes)
#          RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
